<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>Current station: </strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Not specified
  <% end %>
</p>

<p>
  <strong>Route: </strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Not specified
  <% end %>
</p>

<p>
  <strong>Carriages:</strong>
  <ul>
    <% @train.carriages.each do |car| %>
      <li><%= link_to "Carriage â„–#{car.number}", [:admin, car.becomes(Carriage)] %></li>
    <% end %>
  </ul>
 </p>

